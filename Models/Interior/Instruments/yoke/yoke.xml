<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>yoke.ac</path>

  <animation>
    <object-name>manche</object-name>
    <object-name>piedmanche</object-name>
    <object-name>volant</object-name>
    <object-name>pedals</object-name>
    
  </animation>

  <!-- Animation du manche -->
  <animation>
    <type>rotate</type>
    <object-name>volant</object-name>
    <object-name>manche</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> -10 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>volant</object-name>
    <property>surface-positions/aileron-pos-norm</property>
    <factor> -45 </factor>
    <center>
      <x-m>  0.02407 </x-m>
      <y-m>  0.0000 </y-m>
      <z-m>  0.76654 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>pedals</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> -0.18493 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.00715 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
</PropertyList>
